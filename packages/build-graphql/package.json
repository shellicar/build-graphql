{
  "name": "@shellicar/build-graphql",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "author": "Stephen Hellicar",
  "description": "Build plugin that loads GraphQL files and makes them importable via a virtual typedefs module.",
  "keywords": ["build", "version", "esbuild", "vite", "webpack", "rollup", "transform"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shellicar/build-graphql.git"
  },
  "bugs": {
    "url": "https://github.com/shellicar/build-graphql/issues"
  },
  "homepage": "https://github.com/shellicar/build-graphql#readme",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./astro": {
      "import": "./dist/astro.js",
      "require": "./dist/astro.cjs"
    },
    "./rspack": {
      "import": "./dist/rspack.js",
      "require": "./dist/rspack.cjs"
    },
    "./vite": {
      "import": "./dist/vite.js",
      "require": "./dist/vite.cjs"
    },
    "./webpack": {
      "import": "./dist/webpack.js",
      "require": "./dist/webpack.cjs"
    },
    "./rollup": {
      "import": "./dist/rollup.js",
      "require": "./dist/rollup.cjs"
    },
    "./esbuild": {
      "import": "./dist/esbuild.js",
      "require": "./dist/esbuild.cjs"
    },
    "./nuxt": {
      "import": "./dist/nuxt.js",
      "require": "./dist/nuxt.cjs"
    },
    "./farm": {
      "import": "./dist/farm.js",
      "require": "./dist/farm.cjs"
    },
    "./types": {
      "import": "./dist/core/types.js",
      "require": "./dist/core/types.cjs"
    },
    "./typedefs": {
      "import": "./dist/core/typedefs.js",
      "require": "./dist/core/typedefs.cjs"
    },
    "./*": "./*"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": ["./dist/*", "./*"]
    }
  },
  "files": ["dist", "*.md"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc -p tsconfig.check.json"
  },
  "peerDependencies": {
    "@farmfe/core": ">=1",
    "@nuxt/kit": "^3",
    "@nuxt/schema": "^3",
    "esbuild": "*",
    "rollup": "^3",
    "vite": "^6",
    "webpack": "^4 || ^5"
  },
  "peerDependenciesMeta": {
    "@farmfe/core": {
      "optional": true
    },
    "@nuxt/kit": {
      "optional": true
    },
    "@nuxt/schema": {
      "optional": true
    },
    "esbuild": {
      "optional": true
    },
    "rollup": {
      "optional": true
    },
    "vite": {
      "optional": true
    },
    "webpack": {
      "optional": true
    }
  },
  "devDependencies": {
    "@luckycatfactory/esbuild-graphql-loader": "^3.8.1",
    "@nuxt/kit": "^3.15.1",
    "@nuxt/schema": "^3.15.1",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.10.5",
    "bumpp": "^9.9.2",
    "chalk": "^5.4.1",
    "esno": "^4.8.0",
    "npm-check-updates": "^17.1.13",
    "npm-run-all2": "^7.0.2",
    "rollup": "^4.30.0",
    "terser": "^5.37.0",
    "tsup": "^8.3.5",
    "vite": "^6.0.7",
    "vitest": "^2.1.8",
    "webpack": "^5.97.1"
  },
  "dependencies": {
    "glob": "^11.0.0",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6",
    "unplugin": "^2.1.2"
  }
}
